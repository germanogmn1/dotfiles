alias p="pwd"

take()
{
	mkdir -p $1
	cd $1
}

# ls
alias ls="ls -GF"
alias l="ls"
alias l1="l -1"
alias la="ls -A"
alias la1="la -1" 
alias ll="ls -lh"
alias lla="ll -A" 

# git
alias ga="git add -A"
alias gs="git status"
alias gl="git log"

# bundler
alias be="bundle exec"
alias ber="bundle exec rake"
